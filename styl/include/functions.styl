color-block($text = null, $background = null, $border = null)
    if $text
        color: $text
    if $background
        background-color: $background
    if $border
        border-color: $border

gutter(selector, size)
    $unit = unit(size)
    $pad = size / 2
    .row.{selector}
        margin-left: unit(0, $unit) - $pad
        margin-right: unit(0, $unit) - $pad
        
        .column
            padding-left: $pad
            padding-right: $pad
            
gutterParent(selector, size)
    $unit = unit(size)
    $pad = size / 2
    .{selector} .row
        margin-left: unit(0, $unit) - $pad
        margin-right: unit(0, $unit) - $pad
        
        .column
            padding-left: $pad
            padding-right: $pad
            
span($prefix = '')
    &.{$prefix}span1
        width: (1 * 100 / 12)%
    &.{$prefix}span2
        width: (2 * 100 / 12)%
    &.{$prefix}span3
        width: (3 * 100 / 12)%
    &.{$prefix}span4
        width: (4 * 100 / 12)%
    &.{$prefix}span5
        width: (5 * 100 / 12)%
    &.{$prefix}span6
        width: (6 * 100 / 12)%
    &.{$prefix}span7
        width: (7 * 100 / 12)%
    &.{$prefix}span8
        width: (8 * 100 / 12)%
    &.{$prefix}span9
        width: (9 * 100 / 12)%
    &.{$prefix}span10
        width: (10 * 100 / 12)%
    &.{$prefix}span11
        width: (11 * 100 / 12)%

button($text, $background, $border)
        
    &:active
        background-color: @background-color
        border-color: @border-color
        box-shadow: 1px 1px 2px rgba(127, 127, 127, .35)
