#mainContent 
    margin: 0 auto
    max-width: 1316px

.example
    padding: 1px 8px
    border: 0
    border-radius: 4px
    background-color: #E6E6E6
    
    .header, .footer
        margin: .5em 0
    
    .header
        font-size: .9em
        
        .previewSize
            border-width: 1px
            border-style: solid 
            border-color: #D5D5D5
            border-radius: 8px
            margin: .5em 0
            background-color: #EEEEEE
            
            .label
                width: 13ex
                float: left
                padding: .25em 0 0 1ex
                
            .control
                padding: 1px 0
                margin: 0 1em 0 15ex
                position: relative
                height: 3em
                
                .slider
                    margin: .3em 5%
                    z-index: 1
                
                .key
                    border-spacing: 0
                    width: 100%
                    height: 100%
                    position: absolute
                    top: 0
                    
                    td
                        margin: 0
                        border: 0
                        vertical-align: bottom
                        text-align: center
                        
                        &.odd
                            background-color: mix(#0000FF, @background-color, 5%)
                            
                        &.mini 
                            width: 35.6%


                        &.small 
                            width: 28.8%

                        &.medium 
                            width: 21.6%


                        &.large 
                            width: 14%
                    
        
    .frameScroll 
        width: 100%
        overflow: auto
        margin: .5em 0
    
        iframe 
            display: block
            border: 0
            margin: 0
            border-radius: 8px
            width: 1300px

    .footer
        code
            display: block
            max-height: 22em
            overflow: auto
            padding: 0 2ex 1em 2ex
            border-radius: 8px
        
            white-space: pre
            background-color: #FFFFFF
        